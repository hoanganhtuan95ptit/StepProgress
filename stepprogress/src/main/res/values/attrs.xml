<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepProgressView">
        <!-- Common customization -->
        <attr name="stepsCount" format="integer" />

        <attr name="nodeCheckDrawable" format="reference" />
        <attr name="nodeSelectDrawable" format="reference" />
        <attr name="nodeUnselectDrawable" format="reference" />

        <attr name="textNodeSelectColor" format="color" />
        <attr name="textNodeUnselectColor" format="color" />

        <attr name="arcSelectColor" format="color" />
        <attr name="arcUnselectColor" format="color" />

        <!-- Node customization -->
        <attr name="nodeHeight" format="dimension" />
        <!-- Arc customization -->
        <attr name="arcWidth" format="dimension" />
        <attr name="arcPadding" format="dimension" />
        <!-- Text customization -->
        <attr name="titlesEnabled" format="boolean" />
        <attr name="textTitlePadding" format="dimension" />
        <attr name="textNodeSize" format="dimension" />
        <attr name="textNodeTitleSize" format="dimension" />
        <attr name="textNodeTitleColor" format="color" />
    </declare-styleable>
</resources>
